        </activity>
        <activity
            android:name=".Plan_a_trip_Guide"
            android:label="Plan a trip Guide" >
        </activity>
         <activity
            android:name=".Add_travel_details"
            android:label="Add travel details" >
        </activity>
         <activity
            android:name=".Show_Path_To_Place"
            android:label="Show Path To Place" >
