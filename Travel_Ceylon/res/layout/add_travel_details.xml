<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/TextViewStartingCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting City"
            android:textSize="10pt" >
        </TextView>

        <EditText
            android:id="@+id/EditTextStartingCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/TextViewDestinationCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination City"
            android:textSize="10pt" >
        </TextView>

        <EditText
            android:id="@+id/EditTextDestinationCity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="text" >
        </EditText>

        <TextView
            android:id="@+id/TextViewDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration of Travel"
            android:textSize="10pt" >
        </TextView>

        <EditText
            android:id="@+id/EditTextDuration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/TextViewInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select your interests"
            android:textSize="10pt" >
        </TextView>

        <CheckBox
            android:id="@+id/CheckBoxHistory"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="History" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxNature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nature" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxTechnology"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Technology" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxReligonBuddhisum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Religon - Buddhisum" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxReligonHindu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Religon - Hindu" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxReligonCatholic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Religon - Catholic" >
        </CheckBox>

        <CheckBox
            android:id="@+id/CheckBoxReligonIslam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Religon - Islam" >
        </CheckBox>

        <Button
            android:id="@+id/ButtonSendTravelDetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="sendFeedback"
            android:text="Send Travel Details" >
        </Button>
    </LinearLayout>

</ScrollView>